<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ChatRoom</title>
    <style>
      body {
        margin: 0;
        font-size: 20px;
      }
      .sender {
        list-style-type: none;
        text-align: end;
        padding-right: 40px;
      }
      .recepient {
        list-style-type: none;
        text-align: start;
        padding-left: 40px;
      }
      .connecteduser {
        background: darkslategray;
        color: aliceblue;
        text-align: center;
      }
      #sendarea {
        width: 900px;
        height: 40px;
        font-size: 20px;
      }
      .sendBtn {
        width: 80px;
        height: 48px;
        background-color: darkslategray;
        color: palegoldenrod;
        font-size: 15px;
        font-weight: bold;
      }

      * {
        margin: 0;
      }

      .header {
        display: flex;
        align-items: center;
        background: #333;
        justify-content: space-between;
      }

      .navbar {
        display: flex;
      }

      .header > h1 {
        margin-left: 20px;
        color: white;
      }

      .navbar > ul {
        display: flex;
        gap: 2rem;
        margin: 20px;
      }

      .navbar > ul > li {
        list-style: none;
      }

      .navbar > ul > li > a {
        text-decoration: none;
        color: white;
        padding: 2%;
      }

      .navbar > ul > li > a:hover {
        color: dodgerblue;
      }

      .msg {
        margin: 20px;
        text-align: center;
      }

      .msg > h1 {
        color: dodgerblue;
        margin: 2%;
      }

      .listButton {
        background: none;
        outline: none;
        border: none;
        color: white;
        font-size: 20px;
        text-align: center;
        background: #333;
        padding: 2%;
        text-decoration: none;
      }
      .listButton:hover {
        color: #333;
        background: white;
        cursor: pointer;
      }
      .listDiv {
        text-align: center;
        margin-top: 3%;
      }
    </style>
  </head>
  <body>
    <header class="header">
      <h1>Nearluk pvt. ltd.</h1>
      <nav class="navbar">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/user/dashboard">Dashboard</a></li>
          <li>
            <form action="/user/logout" method="post">
              <button type="submit">Logout</button>
            </form>
          </li>
        </ul>
      </nav>
    </header>
    <div
      style="
        display: flex;
        width: 100%;
        height: 90dvh;
        background-color: aliceblue;
        overflow-y: none;
        overflow-x: none;
      "
    >
      <br />

      <div style="width: 25%; background: steelblue">
        <p style="text-align: center; color: white; font-weight: bold">
          <%= user.name %> Contacts
        </p>

        <% contacts.forEach( (contact)=> { %>
        <div class="listDiv">
          <a
            href="<%= user._id%>/chatRoom/<%= contact.requestFrom %>"
            target="chatRoom"
            class="listButton"
          >
            <%= contact.sender %>
          </a>
        </div>
        <% }) %>
      </div>
      <iframe name="chatRoom" width="75%" id="iframe" frameborder="0"> </iframe>
      <!-- <div style="width: 100%">
        <div class="connecteduser">User 1</div>
        <div
          id="messageArea"
          style="overflow-y: scroll; height: 68dvh; padding: 1%"
        ></div>
        <div style="position: fixed; margin: 40px; bottom: 10px">
          <input id="sendarea" type="text" />
          <button class="sendBtn" onClick="submitHandler()">Send</button>
        </div>
      </div> -->

      <script src="/socket.io/socket.io.js"></script>
      <script>
        var socket = io();
        function submitHandler() {
          const message = document.getElementById('sendarea');
          const messageArea = document.getElementById('messageArea');
          const para = document.createElement('p');
          para.innerHTML = message.value;
          para.setAttribute('class', 'sender');
          const mesgNode = para;
          messageArea.appendChild(mesgNode);
          socket.emit('chat', {
            msg: message.value,
            sender: '<%= user._id %>',
            receiver: 2,
          });
          message.value = '';
          document.getElementById('sendarea').focus();
        }
      </script>
    </div>
  </body>
</html>

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ChatRoom</title>
    <style>
      body {
        margin: 0;
        font-size: 20px;
      }
      .sender {
        list-style-type: none;
        text-align: end;
        padding-right: 40px;
      }
      .recepient {
        list-style-type: none;
        text-align: start;
        padding-left: 40px;
      }
      .connecteduser {
        background: darkslategray;
        color: aliceblue;
        text-align: center;
      }
      .sendarea {
        width: 900px;
        height: 40px;
        font-size: 20px;
      }
      .sendBtn {
        width: 80px;
        height: 48px;
        background-color: darkslategray;
        color: palegoldenrod;
        font-size: 15px;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div
      style="
        display: flex;
        width: 100%;
        height: 100dvh;
        background-color: aliceblue;
        overflow-y: none;
        overflow-x: none;
      "
    >
      <div style="width: 25%; background: steelblue">
        <p style="text-align: center; color: white; font-weight: bold">
            <%= name %> Contacts
        </p>
        <ul style="list-style-type: none">
          <li>User 1</li>
          <li>User 2</li>
        </ul>
      </div>
      <div style="width: 100%">
        <div class="connecteduser">User 1</div>
        <div id="messageArea" style="overflow-y: scroll; height: 75dvh;">
            <p class="sender">Hello </p>
            <p class="recepient">Hi</p>
          </ul>
        </div>
        <div style="position: fixed; margin: 40px; bottom: 10px">
            <input class="sendarea"  type="text" />
            <button class="sendBtn" onClick="submitHandler()">Send</button>
        </div>
      </div>
      <script src="/socket.io/socket.io.js"></script>
      <script>
        var socket = io()
        function submitHandler(){
            const message = document.getElementsByClassName("sendarea");
            const messageArea = document.getElementById('messageArea')
            const para = document.createElement('p')
            para.innerHTML = message[0].value
            para.setAttribute('class', 'sender')
            const mesgNode = para
            messageArea.appendChild(mesgNode)
            return socket.emit('chat', {msg : message[0].value, sender: '<%= _id %>', receiver: 2})
        }

    </script>

    </div>
  </body>
</html>

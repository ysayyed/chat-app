<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <style>
      * {
        margin: 0 auto;
      }

      .form {
        background-color: #333;
        border: 1px solid #333;
        width: 500px;
        box-shadow: 1px 2px 5px #333;
        border-radius: 20px;
        margin: 0 auto;
      }

      .form > h1 {
        color: palegreen;
      }

      form > button {
        margin: 10px 0px 10px 0;
        background-color: seagreen;
        outline: none;
        border: none;
        padding: 10px;
        color: black;
        font-size: medium;
        font-weight: bold;
      }

      form > button:hover {
        background-color: palegreen;
        cursor: pointer;
      }

      form {
        margin: 20px;
        color: white;
        justify-content: center;
      }

      form > input {
        width: 100%;
        height: 25px;
        margin: 10px 10px 10px 0;
      }
    </style>
  </head>

  <body>
    <header class="header">
      <h1>Unicsol pvt. ltd.</h1>
      <nav class="navbar">
        <ul>
          <li><a href="/">Home</a></li>
        </ul>
      </nav>
    </header>
    <br />
    <fieldset class="form">
      <h1>User Login</h1>
      <br />
      <hr />
      <form action="/user/login" method="post">
        <label for="email">Email:</label><br />
        <input type="email" id="email" name="email" required />
        <br />
        <br />
        <label for="password">Password:</label><br />
        <input type="password" id="password" name="password" required />
        <br />
        <br />
        <button type="submit">Login</button>
      </form>
    </fieldset>
  </body>
</html>
